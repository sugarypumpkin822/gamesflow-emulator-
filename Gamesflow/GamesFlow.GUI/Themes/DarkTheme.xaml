<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Core Colors -->
  <Color x:Key="PrimaryBackgroundColor">#FF1A1D23</Color>
  <Color x:Key="SecondaryBackgroundColor">#FF23272E</Color>
  <Color x:Key="SurfaceColor">#FF23272E</Color>
  <Color x:Key="CardBackgroundColor">#FF292D36</Color>
  <Color x:Key="PrimaryForegroundColor">#FFF8F8F2</Color>
  <Color x:Key="SecondaryForegroundColor">#FFB0BEC5</Color>
  <Color x:Key="DisabledForegroundColor">#FF666B74</Color>
  <Color x:Key="AccentColor">#FF4FC3F7</Color>
  <Color x:Key="HighlightColor">#FF2ECC40</Color>
  <Color x:Key="ErrorColor">#FFE74C3C</Color>
  <Color x:Key="WarningColor">#FFF1C40F</Color>
  <Color x:Key="SuccessColor">#FF27AE60</Color>
  <Color x:Key="InfoColor">#FF3498DB</Color>
  <Color x:Key="ButtonBackgroundColor">#FF292D36</Color>
  <Color x:Key="ButtonForegroundColor">#FFF8F8F2</Color>
  <Color x:Key="ButtonHoverColor">#FF3A3F4B</Color>
  <Color x:Key="InputBackgroundColor">#FF23272E</Color>
  <Color x:Key="InputForegroundColor">#FFF8F8F2</Color>
  <Color x:Key="InputBorderColor">#FF44485A</Color>
  <Color x:Key="MenuBackgroundColor">#FF23272E</Color>
  <Color x:Key="MenuForegroundColor">#FFF8F8F2</Color>
  <Color x:Key="MenuSelectedColor">#FF44485A</Color>
  <Color x:Key="OverlayColor">#AA181A20</Color>
  <Color x:Key="ShadowColor">#66000000</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
  <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
  <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
  <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
  <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{StaticResource PrimaryForegroundColor}"/>
  <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="{StaticResource SecondaryForegroundColor}"/>
  <SolidColorBrush x:Key="DisabledForegroundBrush" Color="{StaticResource DisabledForegroundColor}"/>
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
  <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource HighlightColor}"/>
  <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
  <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
  <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
  <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
  <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource ButtonBackgroundColor}"/>
  <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{StaticResource ButtonForegroundColor}"/>
  <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}"/>
  <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackgroundColor}"/>
  <SolidColorBrush x:Key="InputForegroundBrush" Color="{StaticResource InputForegroundColor}"/>
  <SolidColorBrush x:Key="InputBorderBrush" Color="{StaticResource InputBorderColor}"/>
  <SolidColorBrush x:Key="MenuBackgroundBrush" Color="{StaticResource MenuBackgroundColor}"/>
  <SolidColorBrush x:Key="MenuForegroundBrush" Color="{StaticResource MenuForegroundColor}"/>
  <SolidColorBrush x:Key="MenuSelectedBrush" Color="{StaticResource MenuSelectedColor}"/>
  <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}"/>
  <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}"/>

  <!-- Selection/Highlighting -->
  <SolidColorBrush x:Key="SelectionBrush" Color="#FF4FC3F7"/>
  <SolidColorBrush x:Key="SelectionForegroundBrush" Color="#FF23272E"/>

  <!-- Hyperlink -->
  <SolidColorBrush x:Key="HyperlinkBrush" Color="#FF4FC3F7"/>
  <SolidColorBrush x:Key="HyperlinkHoverBrush" Color="#FF81D4FA"/>

  <!-- Misc -->
  <SolidColorBrush x:Key="BorderBrush" Color="#FF44485A"/>
  <SolidColorBrush x:Key="SeparatorBrush" Color="#FF393C4B"/>

  <!-- Example of a Button Style -->
  <Style TargetType="Button" x:Key="PrimaryButton">
    <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource ButtonForegroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="Padding" Value="10,4"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border Background="{TemplateBinding Background}" 
                  BorderBrush="{TemplateBinding BorderBrush}" 
                  BorderThickness="{TemplateBinding BorderThickness}" 
                  CornerRadius="6">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
